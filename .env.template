# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=knowledgeplan_dev
POSTGRES_PORT=5432

# Backend API Configuration
API_BASE_URL=http://localhost:8001

# Standard OpenAI Configuration (use either this OR Azure OpenAI)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4o

# Azure OpenAI Configuration
OPENAI_IS_AZURE=true
OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-05-15

# Features toggles
DISABLE_OPENAI=false
DISABLE_OAUTH=true

# Frontend environment variables (will be passed to Vite)
VITE_API_BASE_URL=http://localhost:8001
VITE_OPENAI_API_KEY=${OPENAI_API_KEY}
VITE_OPENAI_IS_AZURE=${OPENAI_IS_AZURE}
VITE_AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT}
VITE_AZURE_OPENAI_DEPLOYMENT=${AZURE_OPENAI_DEPLOYMENT}
VITE_OPENAI_MODEL=${OPENAI_MODEL}

# Authentication configuration
# Options: 'legacy' or 'simple'
VITE_AUTH_TYPE=simple